{
  "name": "server",
  "version": "0.0.1",
  "description": "Incredible app with Mono",
  "private": true,
  "scripts": {
    "dev": "mono dev",
    "start": "cross-env NODE_ENV=production mono",
    "lint": "eslint src/ conf/ test/",
    "test": "npm run lint && nyc ava --verbose --serial --fail-fast test/ && nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "nyc": {
    "include": [
      "src/"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cross-env": "^5.1.1",
    "express": "^4.16.4",
    "express-jwt-session": "^1.0.1",
    "mongodb-utils": "latest",
    "mono-core": "latest",
    "mono-doc": "latest",
    "mono-mongodb": "latest"
  },
  "devDependencies": {
    "mono-test-utils": "^1.2.3",
    "ava": "^0.25.0",
    "codecov": "^3.0.0",
    "eslint": "^4.13.1",
    "nyc": "^11.3.0"
  }
}
